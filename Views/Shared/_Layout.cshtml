<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/css/site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/formulario.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    @RenderSection("css", false)
</head>
<body>
    <div class="page">
        <header>
            <nav>
                <a id="link-login" href="#">Entrar</a>
                @Html.ActionLink("Parceiros | ", "Login", "Usuario")
                @Html.ActionLink("Saiba mais | ", "About", "Home")
                @Html.ActionLink("Planos corporativos | ", "About", "Home")
                @Html.ActionLink("Página inicial | ", "Index", "Home")
            </nav>
        </header>
        <div>
            @Html.Partial("~/Views/Usuario/Login.cshtml")
        </div>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
        <p>
            © @global_asax.NomeSistema é um produto da cocobit! <br />
            Acesse a nossa documentação para eventuais integrações
        </p>
        </footer>
    </div>
    @RenderSection("js", false)
    <script type="text/javascript">
        $(document).ready(function () {
            var link_login = $("#link-login");
            var login_form = $("#login-form");

            $(login_form).hide();

            $(link_login).click(function () {
                $(login_form).toggle();

                $(link_login).css("background-color", "#ffffff")
                $(link_login).css("color", "#f78d1d");
                if ($(login_form).is(":visible")) {
                    $(link_login).css("background-color", "#666666");
                    $(link_login).css("color", "#ffffff");
                    $("#txtLogin").focus();
                }
            });

        });
    </script>
</body>
</html>
